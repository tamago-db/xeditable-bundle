<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ibrows_xeditable.twig.extension" class="Ibrows\XeditableBundle\Twig\TwigExtension">
            <tag name="twig.extension"></tag>
        </service>
        <service id="ibrows_xeditable.mapper.factory" class="Ibrows\XeditableBundle\Mapper\XeditableMapperFactory">
            <argument type="service" id="form.factory"/>
            <argument type="service" id="templating"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="router"/>
        </service>
    </services>

</container>
